{
  "packages": [
    "packages/*",
    "packages-legacy/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "nohoist": [
        "@midwayjs/decorator"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "npmClient": "npm",
  "version": "2.1.1"
}
