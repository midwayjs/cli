{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "nohoist": [
        "@midwayjs/decorator"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "npmClient": "cnpm",
  "version": "1.2.40"
}
